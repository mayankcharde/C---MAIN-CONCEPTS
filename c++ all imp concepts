// OBJECT AND CLASSES (CONSTRUCTOR)
class employee
{
public:
   string name;
   int salary;

   employee(string k, int p, int sp)
   { // MADE A CONSTRUTOR
      this->name = k;
      this->salary = p;
      this->secretpassword = sp;
   }

public:
   void printdetails()
   {
      cout << " the name of our employee is " << this->name << " and his salary is " << this->salary << " dollars " << endl;
   }

public:
   void getsecretpassword()
   {
      cout << "the secret password is " << this->secretpassword << endl;
   }

private:
   int secretpassword;
};

